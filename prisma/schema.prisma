
// Define the datasource
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the generator
generator client {
  provider = "prisma-client-js" // This generates the Prisma Client
}

// Define the Role enum
enum Role {
  USER
  ADMIN
  MODERATOR 
}

// Define the User model
model user {
  id       Int      @id @default(autoincrement())
  userName String
  email    String   @unique
  password String
  role     Role     @default(USER)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

// Define the Project model
model project {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  imageUrl    String   // This will store the Cloudflare R2 image URL
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
}

// Define the Team model
model team {
  id          Int      @id @default(autoincrement())
  name        String
  skill       String
  description String?
  imageUrl    String   // Storing the image URL instead of photo
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
}

// Define the Client model
model client {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  logoUrl     String   // Storing the logo URL
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
}
